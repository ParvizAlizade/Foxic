@model List<Dress>

    @foreach (Dress dresses in Model)
						{
							<div class="prd prd--style2 prd-labels--max prd-labels-shadow ">
								<div class="prd-inside">
									<div class="prd-img-area">
											<a asp-controller="Dress" asp-action="Details" asp-route-id="@dresses.Id" class="prd-img image-hover-scale image-container">
											<img 
												 src="/assets/images/products/@dresses.DressImages.FirstOrDefault(di=>di.IsMain==true)?.Path"
												 alt="Leather Pegged Pants" class="js-prd-img lazyload fade-up">
											<div class="foxic-loader"></div>
											<div class="prd-big-squared-labels">
											</div>
										</a>
										<div class="prd-circle-labels">
											<a href="#"
											   class="circle-label-compare circle-label-wishlist--add js-add-wishlist mt-0"
											   title="Add To Wishlist"><i class="icon-heart-stroke"></i></a><a href="#"
																						   class="circle-label-compare circle-label-wishlist--off js-remove-wishlist mt-0"
																						   title="Remove From Wishlist"><i class="icon-heart-hover"></i></a>
											<a href="#" class="circle-label-qview js-prd-quickview prd-hide-mobile"
											   data-src="assets/ajax/ajax-quickview.html">
												<i class="icon-eye"></i><span>QUICK VIEW</span>
											</a>

											<div class="colorswatch-label colorswatch-label--variants js-prd-colorswatch">
												<i class="icon-palette">
													<span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span><span class="path5"></span><span class="path6"></span><span class="path7"></span><span class="path8"></span><span class="path9"></span><span class="path10"></span>
												</i>
												<ul>
													<li data-image="/assets/images/skins/fashion/products/product-01-1.jpg">
														<a class="js-color-toggle" data-toggle="tooltip"
														   data-placement="left" title="Color Name">
															<img src="/assets/images/colorswatch/color-orange.png"
																 alt="">
														</a>
													</li>
													<li data-image="/assets/images/skins/fashion/products/product-01-color-2.jpg">
														<a class="js-color-toggle" data-toggle="tooltip"
														   data-placement="left" title="Color Name">
															<img src="/assets/images/colorswatch/color-black.png" alt="">
														</a>
													</li>
													<li data-image="/assets/images/skins/fashion/products/product-01-color-3.jpg">
														<a class="js-color-toggle" data-toggle="tooltip"
														   data-placement="left" title="Color Name">
															<img src="/assets/images/colorswatch/color-red.png" alt="">
														</a>
													</li>
												</ul>
											</div>

										</div>

									</div>
									<div class="prd-info">
										<div class="prd-info-wrap">
											<div class="prd-info-top">
												<div class="prd-rating">
													<i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i>
												</div>
											</div>
											<div class="prd-rating justify-content-center">
												<i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i><i class="icon-star-fill fill"></i>
											</div>
						<div class="prd-tag"><a asp-controller="Dress" asp-action="Details" asp-route-id="@dresses.Id">@dresses.Collection.Name</a></div>
											<h2 class="prd-title">
												<a asp-controller="Dress" asp-action="Details" asp-route-id="@dresses.Id">@dresses.Name</a>
											</h2>
											<div class="prd-description">
												Quisque volutpat condimentum velit. Class aptent taciti sociosqu ad
												litora torquent per conubia nostra, per inceptos himenaeos. Nam nec
												ante sed lacinia.
											</div>
											<div class="prd-action">
												<form action="#">
													<button asp-action="AddBaskets" asp-controller="Order" asp-route-id="@dresses.Id" class="btn js-prd-addtocart"
															data-product='{"name": "Leather Pegged Pants", "path":"/assets/images/skins/fashion/products/product-01-1.jpg", "url":"product.html", "aspect_ratio":0.778}'>
														Add
														To Cart
													</button>
												</form>
											</div>
										</div>
										<div class="prd-hovers">
											<div class="prd-circle-labels">
												<div>
													<a href="#"
													   class="circle-label-compare circle-label-wishlist--add js-add-wishlist mt-0"
													   title="Add To Wishlist">
														<i class="icon-heart-stroke"></i>
													</a><a href="#"
														   class="circle-label-compare circle-label-wishlist--off js-remove-wishlist mt-0"
														   title="Remove From Wishlist">
														<i class="icon-heart-hover"></i>
													</a>
												</div>
												<div class="prd-hide-mobile">
													<a href="#"
													   class="circle-label-qview js-prd-quickview"
													   data-src="assets/ajax/ajax-quickview.html">
														<i class="icon-eye"></i><span>QUICK VIEW</span>
													</a>
												</div>
											</div>
											<div class="prd-price">
												<div class="price-new">$@dresses.Price</div>
											</div>
											<div class="prd-action">
												<div class="prd-action-left">
													<form action="#">
														<button class="btn js-prd-addtocart"
																data-product='{"name": "Leather Pegged Pants", "path":"/assets/images/skins/fashion/products/product-01-1.jpg", "url":"product.html", "aspect_ratio":0.778}'>
															Add
															To Cart
														</button>
													</form>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
				}