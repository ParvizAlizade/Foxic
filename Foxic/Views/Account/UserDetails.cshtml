@model UserVM


<div class="holder">
	<div class="container">
		<div class="row">
			<div class="col-md-4 aside aside--left">
				<div class="list-group">
					<a href="account-details.html" class="list-group-item active">Account Details</a>
					<a href="account-wishlist.html" class="list-group-item">My Wishlist</a>
					<a href="account-history.html" class="list-group-item">My Order History</a>
				</div>
			</div>
			<div class="col-md-14 aside">
				<h1 class="mb-3">Account Details</h1>
				<div class="row vert-margin">
					<div class="col-sm-9">
						<div class="card">
							<div class="card-body">
								<h3>Personal Info</h3>
								<p>
									<b>Full Name:</b> @Model.Fullname<br>
									<b>User Name:</b> @Model.Username<br>
									<b>E-mail:</b> @Model.Email<br>
								</p>
								<div class="mt-2 clearfix">
									<a href="#" class="link-icn js-show-form" data-form="#updateDetails"><i class="icon-pencil"></i>Edit</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>